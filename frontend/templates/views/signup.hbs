    <div class="text-center">
        <a href="login">login </a>
    </div>
    <div class="container text-white">
        <h1>Signup</h1>
        <form action="/api/signup" method="POST">

            <p>* Name: <input type="text" name="name" required> </p>
            <p>* Email :<input type="email" name="email" id="email" required> </p>
            <p>* Password: <input type="password" name="password" id="password" required> </p>
            <p>* Confirm Password: <input type="password" name="confirm_password" id="confirm_password" required> </p>
            <button type="submit" class="btn-success" value="signup">Submit</button>
        </form>
    </div>
</body>

